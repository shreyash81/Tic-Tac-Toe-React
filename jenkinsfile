pipeline {
    agent {
        docker {
            image 'node:16' // Use a Node.js Docker image
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
   environment {
        // Add Docker to PATH
        PATH = "/usr/bin:$PATH"
}

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout([$class: 'GitSCM', branches: [[name: 'main']], userRemoteConfigs: [[url: 'https://github.com/shreyash81/Tic-Tac-Toe-React.git']]])
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'npm run build'
            }
        }

        stage('Build and Push Docker Image') {
            environment {
               // DOCKER_IMAGE = "chauhanshreyash18/ultimate-cicd:${BUILD_NUMBER}"
                DOCKERFILE_LOCATION = "Tic-Tac-Toe-React/Dockerfile"
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {
                    sh 'docker --version'
                    sh 'pwd && docker build -t latest . '
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io', "docker-cred") {
                        dockerImage.push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
